{% extends 'base.html.twig' %}

{% block title %} Użytkownicy strony {% endblock %}

{%  block body %}

    <div class="row  text-center">
        <div class="col-12">
            <h3 class="text-center">Użytkownicy strony</h3>
            <hr style="width: 75%; border-top: 2px solid #b4b4b4">
        </div>
    </div>

    <div class="container-fluid padding">
        <div class="row padding">
            {% for user in users %}
            <div class="col-md-3">
                <div class="card">
                    <img class="card-img-top rounded-circle"  src="{{ user.zdjecie }}">
                    <div class="card-body">
                        <h4 class="card-title">{{ user.imie }}</h4>
                        <a href="mailto:{{ user.email }}">Napisz do użytkownika</a>
                        <p class="card-text">{{ user.info }}</p>
                        {% for skill in user.umiejetnosci %}
                            <small class="text-muted"><i class="far fa-check-circle"></i>{{ skill.nazwaUmiejetnosci }}
                            </small>
                        {% endfor %}
                    </div>
                </div>
            </div>
            {% endfor %}
        </div>
    </div>
    <br>

{% endblock %}
{% extends 'base.html.twig' %}

{% block title %}Register!{% endblock %}

{% block body %}
    <div class="col-xl-5 col-lg-6 col-md-8 col-sm-10 mx-auto form p-4">
        <h1 class="display-4 py-2 text-truncate text-center">Zarejestruj się</h1>
        <div class="px-2">
            {# todo - replace with a Symfony form! #}
            {% for message in app.flashes('error') %}
                <div class="alert alert-danger">
                    {{ message }}
                </div>
            {% endfor %}
            <form class="form-signin" method="post">

                <div class="form-group">
                    <label for="inputName" class="sr-only">Imię i Nazwisko:</label>
                    <input type="text" name="name" id="inputName" class="form-control" placeholder="Imię i nazwisko" required >
                </div>


                <div class="form-group">
                    <label for="inputLogin" class="sr-only">Nazwa użytkownika:</label>
                    <input type="text" name="login" id="inputLogin" class="form-control" placeholder="Nazwa użytkownika" required >
                </div>

                <div class="form-group">
                    <label for="inputPassword" class="sr-only">Hasło:</label>
                    <input type="password" name="password" id="inputPassword" class="form-control" placeholder="Hasło"
                           pattern="(?=.*\d)(?=.*[a-z])(?=.*[A-Z]).{8,}"
                           title="Hasło musi zawierać minimum jedną liczbę, dużą i małą literę oraz minimum 8 symboli" required>
                </div>

                <div class="form-group">
                    <label for="email" class="sr-only" >Email</label>
                        <input type="text" class="form-control" name="email" type="email" placeholder="Email" id="email"
                               pattern="[a-z0-9._%+-]+@[a-z0-9.-]+\.[a-z]{2,}$" title="Email w postaci ___@___.___ gdzie ___- ciąg znaków" required>
                </div>

                <div class="form-group">
                    <label for="about"  class="sr-only" >O Sobie: </label>
                    <textarea class="form-control" name="about" id="about" rows="3" placeholder="O Sobie: "></textarea>
                </div>

                <div class="form-group d-inline">
                <input type="radio" id="male" name="gender" value="Mężczyzna">
                <label for="male">Mężczyzna</label>
                <input type="radio" id="female" name="gender" value="Kobieta">
                <label for="female">Kobieta</label><br>
                </div>

                <div class="form-group">
                    <label for="exampleInputFile">Ustaw zdjęcie profilowe: </label>
                    <input  type="file" name="photo" class="form-control-file" id="exampleInputFile" aria-describedby="fileHelp">
                    <small id="fileHelp" class="form-text text-muted">Polecamy ustawić swoje zdjęcie aby inni użytkownicy mogli Cię łatwo znaleźć</small>
                </div>

                <div class="checkbox mb-3">
                    <label>
                        <input type="checkbox" name="_remember_me" required> Akceptuję warunki strony
                    </label>
                </div>

                <button class="btn btn-lg btn-primary btn-block" type="submit">
                    Zarejestruj mnie
                </button>

                <div class="mb-3 text-center">
                    Masz już konto?  <a href="{{ path('app_login') }}">Zaloguj się!</a>
                </div>

            </form>
        </div>
    </div>
{% endblock %}
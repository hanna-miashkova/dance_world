{% extends 'base.html.twig' %}

{% block title %} Szkola tanca {% endblock %}

{%  block body %}

        <div class="row text-center">
            <div class="col-12">
                <h3>Dowiedź się więcej o "{{ szkola.nazwaSzkoly }}" </h3>
                <hr style="width: 75%; border-top: 2px solid #b4b4b4">
            </div>
        </div>

    <div class="row">

        <div class="col-12 col-md-6">{{ szkola.pelnyOpis }}</div>

        <div class="col-12 col-md-6">
           <div class="embed-responsive embed-responsive-16by9">
                <iframe width="560" height="315" src="{{ szkola.wideo }}" frameborder="0" allow="accelerometer; autoplay; encrypted-media; gyroscope; picture-in-picture" allowfullscreen></iframe>
            </div>
        </div>

    </div>
        <div class="row  text-center">
            <div class="col-12">
                <h3 class="text-center">Nasi instruktorzy</h3>
                <hr style="width: 75%; border-top: 2px solid #b4b4b4">
            </div>
        </div>

    <div class="row justify-content-md-center">
        <div class="row padding">
            <div class="col-xs-12 col-sm-12 col-md-4 " >
                <div class="card" style="width: 18rem;">
                    <img class="card-img-top" src="{{ asset('img/team1.png') }}">
                    <div class="card-body">
                        <h4 class="card-title">Agnieszka Kowalska</h4>
                        <p class="card-text">Prowadzę zajęcia z Tango i chętnie nauczę Was jak opanować ten styl tańca, zapraszam!</p>
                    </div>
                </div>
            </div>

            <div class="col-md-4 ">
                <div class="card" style="width: 18rem;">
                    <img class="card-img-top" src="{{ asset('img/team2.png') }}">
                    <div class="card-body">
                        <h4 class="card-title">Sergiusz Marzejko</h4>
                        <p class="card-text">Hip-hop to coś w czym jestem najlepszy, przychodź do nas na lekcje, czekam z niecierpliwością!</p>
                    </div>
                </div>
            </div>

            <div class="col-md-4" >
                <div class="card" style="width: 18rem;">
                    <img class="card-img-top" src="{{ asset('img/team3.png') }}">
                    <div class="card-body">
                        <h4 class="card-title">Jessica Obrót</h4>
                        <p class="card-text">Jazz to moja pasja, prowadzę zajęcia już od 10 lat, każdy może się nauczyć, zapraszam serdecznie!</p>
                    </div>
                </div>
            </div>
        </div>
    </div>
<br>

    <footer style="background-color: #E8E8E8; color: #494b54; padding-top: 1rem">
        <div class="container-fluid padding">
            <div class="row text-center">
                <div class ="col-xs-6 col-sm-6 col-md-8 col-lg-8">
                    <iframe src="https://www.google.com/maps/embed?pb=!1m18!1m12!1m3!{{ szkola.adres }}" width="700" height="270" frameborder="0" style="border:0;" allowfullscreen="" aria-hidden="false" tabindex="0"></iframe>
                </div>

                <div class ="col-md-4">
                    <hr class="light" style="width: 30%; border-top: 1px solid ">
                    <h6>Kontakt</h6>
                    <p>{{ szkola.kontakt }}</p>

                    <hr class="light" style="width: 40%; border-top: 1px solid">
                    <h6>Godziny otwarcia</h6>
                    <p>codziennie {{ szkola.godzinyKontakt }}</p>

                    <hr class="light" style="width: 30%; border-top: 1px solid">
                    <h6>Nasza strona</h6>
                    <p><a href="{{ szkola.strona }}"  style="color:#494b54">{{ szkola.strona }}</a></p>
                </div>
            </div>

        </div>
    </footer>

{% endblock %}
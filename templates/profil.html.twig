{% extends 'base.html.twig' %}

{% block body %}

<div class="container">
    <div class="row">
        <div class="col-md-4 ">
            <div class="text-center">
                <img alt="..." class="rounded-circle float-left" src="{{ app.user.zdjecie }}" width="200px">
            </div>
        </div>

        <div class="col-md-8" >

            <div >
                <p><b> Imię i Nazwisko: </b> {{ app.user.imie }}</p>
            </div>

            <div >
               <p><b> Nazwa użytkownika: </b> {{ app.user.username }}</p>
            </div>

            <div >
                <p><b> Email: </b> {{ app.user.email }}</p>
            </div>

            <div >
                <p><b> Umiejętności: </b> </p>
<p>
                {% for umiejetnosci in app.user.umiejetnosci %}
                    &bull;{{ umiejetnosci.nazwaUmiejetnosci }}
                {% endfor %}
</p>



                <div class="modal" tabindex="-1" role="dialog" id="exampleModal">
                    <div class="modal-dialog" role="document">
                        <div class="modal-content">
                            <div class="modal-header">
                                <h5 class="modal-title">Edytuj profil</h5>
                                <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                                    <span aria-hidden="true">&times;</span>
                                </button>
                            </div>
                            <div class="modal-body">
                                {{ form(form,{'attr':{'id':'formaID'}}) }}
                            </div>
                            <div class="modal-footer">
                                <button type="submit" form="formaID" class="btn btn-primary">Zapisz zmiany</button>
                                <button type="button" class="btn btn-secondary" data-dismiss="modal">Powrót</button>
                            </div>
                        </div>
                    </div>
                </div>
            </div>

            <div >
                <p><b> Info o sobie: </b></p>
                <p>{{ app.user.info }}</p>

            </div>
            <button type="button" class="btn btn-primary" data-toggle="modal" data-target="#exampleModal">
                Edytuj profil
            </button>

            <a class="btn btn-secondary" href="{{ path('app_logout') }}" role="button">Wyloguj się</a>
        </div>
    </div>
</div>

{% endblock %}


